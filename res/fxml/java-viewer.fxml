<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Point3D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.CustomMenuItem?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<BorderPane style="-fx-font-family: Galvji; -fx-background-color: #f6f7f5;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <SplitPane dividerPositions="0.5">
         <items>
            <BorderPane>
               <center>
                  <TextArea fx:id="javaEditor" prefHeight="200.0" prefWidth="200.0" promptText="Write Java code here ...">
                     <contextMenu>
                        <ContextMenu>
                          <items>
                              <CustomMenuItem mnemonicParsing="false" text="Font Size">
                                 <content>
                                    <Slider fx:id="javaEditorFontSlider" blockIncrement="0.01" max="1.0" />
                                 </content>
                              </CustomMenuItem>
                          </items>
                        </ContextMenu>
                     </contextMenu></TextArea>
               </center>
            </BorderPane>
            <TextArea fx:id="bytecodeViewer" editable="false" prefHeight="200.0" prefWidth="200.0" promptText="Click &quot;Disassemble&quot; or press Control-A to disassemble Java code">
               <contextMenu>
                  <ContextMenu>
                    <items>
                        <CustomMenuItem mnemonicParsing="false" text="Font Size">
                           <content>
                              <Slider fx:id="bytecodeViewerFontSlider" blockIncrement="0.01" max="1.0" />
                           </content>
                        </CustomMenuItem>
                    </items>
                  </ContextMenu>
               </contextMenu></TextArea>
         </items>
      </SplitPane>
   </center>
   <bottom>
      <StackPane>
         <BorderPane.margin>
            <Insets bottom="15.0" left="15.0" right="15.0" />
         </BorderPane.margin>
         <children>
            <HBox alignment="CENTER" fillHeight="false" spacing="20.0">
               <children>
                  <Button fx:id="compileButton" mnemonicParsing="false" text="Disassemble">
                     <tooltip>
                        <Tooltip fx:id="compileButtonTooltip" opacity="0.7" text="^ A" textAlignment="CENTER" />
                     </tooltip></Button>
                  <CheckBox fx:id="verboseCheckBox" mnemonicParsing="false" text="Verbose">
                     <tooltip>
                        <Tooltip fx:id="verboseTooltip" text="^ W" />
                     </tooltip></CheckBox>
               </children>
            </HBox>
            <ProgressIndicator fx:id="compileProgress" scaleX="0.5" scaleY="0.5" StackPane.alignment="BOTTOM_RIGHT">
               <StackPane.margin>
                  <Insets />
               </StackPane.margin>
               <rotationAxis>
                  <Point3D y="1.0" />
               </rotationAxis>
            </ProgressIndicator>
         </children>
      </StackPane>
   </bottom>
</BorderPane>
