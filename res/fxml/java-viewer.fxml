<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Point3D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<BorderPane style="-fx-font-family: Galvji; -fx-background-color: #f6f7f5;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <SplitPane dividerPositions="0.5" style="-fx-font-size: 25;">
         <items>
            <BorderPane>
               <center>
                  <TextArea fx:id="javaEditor" prefHeight="200.0" prefWidth="200.0" />
               </center>
               <bottom>
                  <TextField fx:id="filenameTextField" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </BorderPane.margin>
                  </TextField>
               </bottom>
            </BorderPane>
            <TextArea fx:id="bytecodeViewer" editable="false" prefHeight="200.0" prefWidth="200.0" />
         </items>
      </SplitPane>
   </center>
   <bottom>
      <StackPane>
         <BorderPane.margin>
            <Insets bottom="15.0" left="15.0" right="15.0" />
         </BorderPane.margin>
         <children>
            <HBox alignment="CENTER" fillHeight="false" spacing="20.0">
               <children>
                  <Button fx:id="compileButton" mnemonicParsing="false" text="Compile" />
               </children>
            </HBox>
            <ProgressIndicator fx:id="compileProgress" scaleX="0.5" scaleY="0.5" StackPane.alignment="BOTTOM_RIGHT">
               <StackPane.margin>
                  <Insets />
               </StackPane.margin>
               <rotationAxis>
                  <Point3D y="1.0" />
               </rotationAxis>
            </ProgressIndicator>
         </children>
      </StackPane>
   </bottom>
</BorderPane>
